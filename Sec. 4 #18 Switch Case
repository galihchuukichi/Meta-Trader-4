// IMPORTANT 
/*
SWITCH CASE only use integer value. CAN'T use STIRNGS

*/

void OnStart()
  {
//---
   int dayNow = DayOfWeek();
   
   switch(dayNow){
      case 0 : Alert("Now is Sunday!"); break;
      case 1 : Alert("Now is Monday!"); dayNow++;
      case 2 : Alert("Hehe a new test"); break;
      default : Alert("ERROR. No such days");
   }
   

   
  }
//+------------------------------------------------------------------+
