//+------------------------------------------------------------------+
//| Script program start function                                    |
//+------------------------------------------------------------------+
void OnStart()
  {
//---
   double priceNow = 1.0555;
   int maxLossInPips = 100;
   bool boolIsTradingAllowed = 1;
   string maxLossMessage = "Too much losses, shutting down system.";
   
   Alert("");
   Alert(priceNow);
   Alert(maxLossInPips);
   Alert(boolIsTradingAllowed);
   Alert(maxLossMessage);
   
   
  }
//+------------------------------------------------------------------+
